<script>
    // Handle event redirect to detail course
    let courses = document.querySelectorAll('.ml-course')
    console.log(courses)
    courses.forEach(course => {
        course.addEventListener("click", function() {
            let courseId = course.getAttribute("data-course-id")
            let courseDetailLink = `http://localhost/local/message/coursedetails.php?id=${courseId}`
            if (course.classList.contains('ml-enrolled-course')) {
                courseDetailLink = `http://localhost/course/view.php?id=${courseId}`
            }
            window.location.href = courseDetailLink
        })
    })

    // Handle click search button
    let searchForm = document.querySelector('.ml-search')
    let searchButton = document.querySelector('.ml-search-input-icon')
    searchButton.onclick = function() {
        searchForm.submit()
    }
</script>
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

<style>
    .ml-content {
        width: 100%;
        background-color: #F5F7F8;
        padding: 30px 100px;
    }

    .ml-content.ml-content-search-button {
        background-color: #fff;
        padding: 30px 100px;
    }

    .ml-content.ml-content-search {
        background-color: #ddf7e8;
    }

    .ml-content.ml-content-enroll {
        background-color: #fff;
    }

    .ml-courses-block {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        grid-gap: 30px;
    }

    .ml-courses-title {
        margin-bottom: 20px;
    }

    .ml-course {
        height: 400px;
        border-radius: 20px;
        padding: 10px;
        background-color: #fff;
        display: flex;
        flex-direction: column;
        border: 2px solid #E5E7E8;
        transition: transform linear 0.2s;
        box-shadow: 0 1px 8px -3px rgb(0 0 0 / 16%),0 0 24px -16px rgb(0 0 0 / 16%);
    }

    .ml-course:hover {
        transform: scale(1.1);
        cursor: pointer;
        box-shadow: 0 0 40px -8px rgb(0 0 0 / 16%),0 0 24px -16px rgb(0 0 0 / 16%);
    }

    .ml-course-img {
        height: 200px;
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        border-radius: 10px;
    }

    .ml-course-title {
        margin-top: 10px;
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .ml-course-description {
        font-size: 14px;
        color: #555;
        font-weight: 400;
    }

    .ml-course-level {
        margin-top: auto;
        font-weight: 400;
    }

    .ml-message {
        font-size: 16px;
        font-weight: 500;
        color: #888;
    }

    .ml-search {
        margin-top: 10px;
        margin-bottom: 30px;
        display: flex;
    }

    .ml-search-keyword {
        font-size: 16px;
        font-weight: 500;
        color: #888;
        margin-bottom: 20px;
    }

    .ml-search-input {
        width: 60%;
        margin: 0 auto;
        position: relative;

    }

    .ml-search-input-icon {
        background-color: #0F0F0F;
        color: #fff;
        position: absolute;
        font-size: 25px;
        top: 50%;
        right: 4px;
        transform: translateY(-50%);
        padding: 6px 20px;
        border-radius: 20px;
        cursor: pointer;
        transition: background-color linear 0.2s;
    }

    .ml-search-input-icon:hover {
        background-color: #525252;
    }

    .ml-search-input-text {
        width: 100%;
        border: 2px solid #e5e7e8;
        outline: none;
        padding: 10px 30px;
        border-radius: 20px;
        transition: border linear 0.2s;
        box-shadow: 0 1px 8px -3px rgb(0 0 0 / 16%),0 0 24px -16px rgb(0 0 0 / 16%);
    }

    .ml-search-input-text:focus {
        border: 2px solid #333;
    }

    .ml-search-input-submit {
        border: none;
        outline: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: border linear 0.3s;
        background-color: #6499E9;
        color: #fff;
        display: none;
    }

    /* Custom*/
    div.d-flex.align-items-center h2.mb-3.mt-3 {
        margin-left: 100px !important;
    }

    div.page-header-headings h1.h2 {
        margin-left: 100px !important;
    }

    @media (max-width: 1200px) {
        .ml-content {
            padding: 30px 30px;
        }

        .ml-courses-block {
            grid-gap: 20px;
        }
    }

    @media (max-width: 1100px) {
        .ml-content {
            padding: 30px 30px;
        }

        div.d-flex.align-items-center h2.mb-3.mt-3 {
            margin-left: 30px !important;
        }

        div.page-header-headings h1.h2 {
            margin-left: 30px !important;
        }

        .ml-courses-block {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            grid-gap: 20px;
        }
    }

    @media (max-width: 850px) {
        .ml-content {
            padding: 30px 10px;
        }

        .ml-search-input {
            width: 100%;
        }

        div.d-flex.align-items-center h2.mb-3.mt-3 {
            margin-left: 10px !important;
        }

        div.page-header-headings h1.h2 {
            margin-left: 10px !important;
        }

        .ml-courses-block {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-gap: 20px;
        }
    }

    @media (max-width: 650px) {
        .ml-courses-block {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-gap: 20px;
        }
    }

    @media (max-width: 550px) {
    .ml-courses-block {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        grid-gap: 20px;
    }
    }

    div#page.drawers.drag-container {
        padding-left: 0;
        padding-right: 0;
    }

    div#topofscroll.main-inner {
        max-width: unset !important;
        padding: 0 !important;
    }

    div#topofscroll.main-inner div[role="main"] {
        padding: 0 !important;
    }

    .ml-check-rs {
        text-decoration: none;
        border: none;
        outline: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: border linear 0.3s;
        background-color: #6499E9;
        color: #fff;
    }

    .ml-check-rs:hover {
        text-decoration: none;
        color: #fff;
        opacity: 0.8;
    }

</style>

